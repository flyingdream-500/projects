    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimaryVariant</item>
        <item name="boxBackgroundColor">?attr/colorOnBackground</item>
    </style>
    <style name="InputLayout.Name">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">25</item>
    </style>


    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorPrimaryVariant</item>
    </style>


    <style name="EditText">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryVariant</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>
    <!--Money exchange fields-->
    <style name="EditText.Number">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <!--Name and surname fields-->
    <style name="EditText.Name">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLength">25</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
    </style>

    <style name="CardView">
        <item name="cardElevation">5dp</item>
    </style>
    <style name="CardView.MainCard">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="CardView.TransactionCard">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeWidth">1dp</item>
    </style>


