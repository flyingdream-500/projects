<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContentProviderApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FragmentTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
    </style>

    <!-- Rounding for ShapeableImageView -->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Gallery ShapeableImageView -->
    <style name="GalleryImageRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>


    <!--ITEM WORD STYLE-->
    <style name="ItemWordStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
    </style>

    <style name="ItemTranslateStyle" parent="ItemWordStyle">
        <item name="android:textSize">14sp</item>
    </style>



    <!-- InputLayoutStyle style  for keyword & translation fields-->
    <style name="InputLayoutStyleFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>
    <!--Money exchange fields-->
    <style name="InputEditTextStyle">
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
    </style>
    <!--Add To Dictionary Button Style-->
    <style name="AddToDictionaryButtonStyle">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <!--Pick image Button Style-->
    <style name="PickImageButtonStyle" parent="AddToDictionaryButtonStyle">
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--ERROR DIALOG STYLE-->
    <style name="ErrorTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
    </style>

</resources>