<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/material_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/violet</item>
        <item name="colorSecondaryVariant">@color/dark_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Change status bar color to yellow -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorEdgeEffect">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
    </style>



    <!-- Rounding for ShapeableImageView -->
    <style name="ImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



    <style name="Text">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
    <style name="Text.Title">
        <item name="android:textSize">@dimen/fragment_title_size</item>
    </style>
    <style name="Text.Greeting">
        <item name="android:textSize">@dimen/greeting_size</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>
    <style name="Text.UserName">
        <item name="android:textSize">@dimen/user_name_size</item>
    </style>
    <style name="Text.SeeAll">
        <item name="android:textSize">@dimen/see_all_size</item>
    </style>
    <style name="Text.TitleBalance">
        <item name="android:textSize">@dimen/title_balance_size</item>
    </style>
    <style name="Text.Balance">
        <item name="android:textSize">@dimen/title_balance_size</item>
    </style>
    <style name="Text.CurrencyAbbreviation">
        <item name="android:textSize">@dimen/currency_abbr_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="Text.CurrencyDescription">
        <item name="android:textSize">@dimen/currency_description_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="Text.SettingsCategory">
        <item name="android:textSize">@dimen/category_size</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="Text.SettingsItem">
        <item name="android:textSize">@dimen/settings_item_size</item>
    </style>
    <style name="Text.SettingsDescription">
        <item name="android:textSize">@dimen/settings_description_size</item>
    </style>
    <style name="Text.TransactionTitle">
        <item name="android:textSize">@dimen/transaction_title_size</item>
    </style>
    <style name="Text.TransactionValue">
        <item name="android:textSize">@dimen/transaction_value_size</item>
    </style>
    <style name="Text.TransactionDate">
        <item name="android:textSize">@dimen/transaction_date_size</item>
    </style>
    <style name="Text.Card">
        <item name="android:textSize">@dimen/card_name_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text.Card.Balance">
        <item name="android:textSize">@dimen/card_balance_size</item>
    </style>
    <style name="Text.Card.BalanceTitle">
        <item name="android:textSize">@dimen/card_balance_title_size</item>
