<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpeedometerView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="speedometerDefaultAttr">@style/SpeedometerViewDefaultStyle</item>
    </style>

    <style name="SpeedTextViewStyle">
        <item name="android:background">@drawable/speed_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/enter_the_grid</item>
    </style>

    <style name="SpeedSeekBarStyle">
        <item name="android:thumb">@drawable/ic_sports_car</item>
        <item name="android:progressTint">@color/brown</item>
        <item name="android:splitTrack">false</item>
    </style>



    <!--Reddish-->
    <style name="SpeedometerFirstStyle">
        <item name="panelColor">@color/reddish</item>

        <item name="arcGradientStart">@color/reddish</item>
        <item name="arcGradientCenter">@color/reddish</item>
        <item name="arcGradientEnd">@color/reddish</item>

        <item name="firstLayerGradientStart">@color/black</item>
        <item name="firstLayerGradientCenter">@color/reddish</item>
        <item name="firstLayerGradientEnd">@color/black</item>

        <item name="secondLayerGradientStart">@color/gray</item>
        <item name="secondLayerGradientCenter">@color/black</item>
        <item name="secondLayerGradientEnd">@color/gray</item>

        <item name="thirdLayerColor">@color/black</item>
        <item name="fourthLayerColor">@color/white</item>

        <item name="halfRadiusCircleColor">@color/white</item>
        <item name="centralCircleColor">@color/black</item>

        <item name="arrowColor">@color/reddish</item>
        <item name="arrowStrokeColor">@color/black</item>

        <item name="markColor">@color/white</item>
        <item name="doubleMarkColor">@color/white</item>

        <item name="numbersColor">@color/white</item>
        <item name="logoColor">@color/white</item>
        <item name="currentSpeed">45</item>
        <item name="maxSpeed">300</item>
    </style>

