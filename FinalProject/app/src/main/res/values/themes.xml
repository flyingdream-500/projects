    <style name="Text.CardTransaction.Balance">
        <item name="android:textSize">@dimen/card_transaction_balance_size</item>
    </style>
    <style name="Text.CardTransaction.BalanceTitle">
        <item name="android:textSize">@dimen/card_transaction_balance_title_size</item>
    </style>
    <style name="Text.Authentication">
        <item name="android:textSize">@dimen/auth_title_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Authentication.Phone">
        <item name="android:textSize">@dimen/auth_phone_size</item>
    </style>
    <style name="Text.Authentication.Code">
        <item name="android:textSize">@dimen/auth_code_size</item>
