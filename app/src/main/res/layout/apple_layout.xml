<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/apple_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/apple_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Apple #1"
        android:background="@drawable/apple_name_background"
        android:textColor="@color/apple_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_eat_apple"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_apple_eat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>