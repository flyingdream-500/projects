<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSReciever" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/material_yellow</item>
    </style>

    <!-- Caller TextView style-->
    <style name="FromCallerTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/louis_george_cafe_bold</item>
    </style>

    <!--Verify code EditText style-->
    <style name="InputEditTextStyle" parent="FromCallerTextStyle">
        <item name="android:textColorHighlight">@color/material_yellow</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="backgroundTint">@color/material_yellow</item>
    </style>
</resources>