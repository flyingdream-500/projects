<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TransliteratorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- InputLayoutStyle style with char counter for rus & eng fields-->
    <style name="InputLayoutStyleFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stroke</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">100</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/stroke</item>
        <item name="colorAccent">@color/stroke</item>
    </style>

    <!-- name & surname fields style-->
    <style name="InputEditTextStyle">
        <item name="android:textColorHighlight">@color/stroke</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>