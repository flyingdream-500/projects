<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FileExplorer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--PATH STYLE-->
    <style name="TextPathStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/louis_george_cafe_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--NO DATA STYLE-->
    <style name="TextNoDataStyle">
        <item name="android:textSize">22sp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>


    <!--FILE ITEM STYLE-->
    <style name="TextFileNameStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/louis_george_cafe_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextFilesCountStyle" parent="TextFileNameStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>